<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Фоновая полоса -->
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="#e0e0e0"/> <!-- Светло-серый фон -->
            <corners android:radius="8dp"/> <!-- Закругление углов -->
        </shape>
    </item>

    <!-- Заполняющая полоса -->
    <item android:left="0dp" android:right="0dp" android:top="0dp" android:bottom="0dp">
        <shape
            android:shape="rectangle">
            <solid android:color="#4caf50"/> <!-- Зеленый цвет -->
            <corners android:radius="8dp"/> <!-- Закругление углов -->
        </shape>
    </item>
</layer-list>
